{
  "name": "mili",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "scripts": {
    "start": "lerna run watch --parallel",
    "build": "yarn clean && lerna run build --stream",
    "clean": "lerna run clean --parallel",
    "test": "STORYBOOK_TEST=true react-scripts test",
    "ci-test": "cross-env CI=true yarn test",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "cross-env NODE_OPTIONS=--max_old_space_size=4096 build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn && yarn ci-test && tsc"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --ext .ts --ext .tsx",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addon-storyshots": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "8.0.6",
    "cross-env": "^7.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "expect": "^24.9.0",
    "husky": "^3.1.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-mock": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "mili-lint": "^0.1.2",
    "node-sass": "^4.13.0",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.13.1",
    "react-scripts": "3.3.0",
    "react-test-renderer": "^16.12.0",
    "require-context.macro": "^1.2.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-dts": "^1.1.13",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-rebase": "^3.2.3",
    "rollup-plugin-terser": "^5.1.3",
    "storybook-addon-specifications": "^2.1.5",
    "stylelint": "^13.5.0",
    "typescript": "^3.8.3",
    "webpack-bundle-analyzer": "^3.6.0"
  }
}
